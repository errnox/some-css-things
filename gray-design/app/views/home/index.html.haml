    %div.col-md-9{"ng-controller" => "metricsListCtrl as metricsListCtrl"}
      -# %div{"ng-controller" => "metricsListCtrl as metricsListCtrl"}
      %textarea.content-box{:style => "width: 100%; height: 200px;"} {{metricsListCtrl.metrics | json}}
      %h2
        Metrics
        %a.btn.btn-default{"ng-click" => "metricsListCtrl.refresh()"} Refresh

      %div{"ng-cloak" => "", "ng-repeat" => "metric in metricsListCtrl.metrics"}
        %div.content-box{"ng-class" => "{'updated-content-box': metric.updated}"}
          %strong Name:
          %input{:type => "text", "ng-model" => "metric.name", "ng-click" => "metricsListCtrl.markAsDirty(metric)"}
          %strong Description:
          %input{:type => "text", "ng-model" => "metric.description", "ng-click" => "metricsListCtrl.markAsDirty(metric)"}
          %strong Value:
          %input{:type => "text", "ng-model" => "metric.value", "ng-click" => "metricsListCtrl.markAsDirty(metric)"}
          %a.btn.btn-default{"ng-show" => "metric.dirty", "ng-click" => "metricsListCtrl.saveMetric(metric)"} Save

